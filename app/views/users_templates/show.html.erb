<nav>
  <ul> 
   <li><a href="/users"> Users </a></li>
   <li><a href="/photos"> Photos </a></li>
  </ul>
</nav>
    
<h1> <%= @username.username %> </h1>

<dl>
  <dt> ID </dt>
  <dd> <%= @username.id %></dd> 

  <dt> Edit user </dt> 
  <dd> 
    <form action="/update_user/<%= @username.username %>">
      <label for="browser_username">Username</label>
      <input id="browser_username" type="text" name="input_username" 
              placeholder="Enter a username..." value="<%= @username.username %>">

      <button>Update user</button>
    </form>
  </dd> 
</dl>


<h2> Own photos (<%= @username.own_photos.count %>) </h2>

<table border="1">
<tbody>
  <tr>
    <th> Image </th>
    <th> Owner </th>
    <th> Caption </th>
    <th> Posted</th>
    <th> </th>
  </tr>

  <% @username.own_photos.each do |a_photo| %>
  <tr>
    <td> <img src='<%= a_photo.image %>'> </td>
    <td> <%= a_photo.poster.username %> </td>
    <td> <%= a_photo.caption %> </td>
    <td> <%= a_photo.created_at %> </td>
    <td> <a href='/photos/:id'> Show details </a> </td>
  </tr>
  <% end %>

</tbody>
</table>